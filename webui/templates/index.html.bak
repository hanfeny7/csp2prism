        async function loadExamples() {
            try {
                const response = await fetch('/api/examples');
                const data = await response.json();
                
                if (data.success) {
                    const select = document.getElementById('exampleSelect');
                    data.examples.forEach(ex => {
                        const option = document.createElement('option');
                        option.value = ex.name;
                        option.textContent = ex.name;
                        option.dataset.content = ex.content;
                        select.appendChild(option);
                    });
                }
            } catch (error) {
                console.error('Failed to load examples:', error);
            }
        }

        function loadExample() {
            const select = document.getElementById('exampleSelect');
            const option = select.options[select.selectedIndex];
            if (option.value && option.dataset.content) {
                document.getElementById('patInput').value = option.dataset.content;
                document.getElementById('patStats').textContent = 
                    `${option.dataset.content.split('\n').length} è¡Œ`;
                setStatus('ç¤ºä¾‹å·²åŠ è½½: ' + option.value, 'info');
            }
